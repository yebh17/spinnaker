pipeline {
    agent any
    stages { 
        stage('Build') {
            steps {
                sh 'cd FlaskApp && docker build -t python-app . && cd ..' 
            }
        }

        stage('check'){
            steps {
                sh 'docker images'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}