pipeline {
    environment {
    registry = "python-app"
    }
    agent any
    stages { 
        stage('Build') {
            steps {
                docker.build registry + ":$BUILD_NUMBER"
            }
        }

        stage('check'){
            steps {
                sh 'docker images'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}